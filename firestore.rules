rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'krishnakattimanimb@gmail.com';
    }
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow read if user is signed in
      allow read: if isSignedIn();
      
      // Allow create for new users during registration
      allow create: if isSignedIn() && isOwner(userId);
      
      // Allow update if user owns the document OR if admin
      allow update: if isOwner(userId) || isAdmin();
      
      // Allow delete ONLY for admin
      allow delete: if isAdmin();
    }
    
    // Events collection
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;
      
      // Only admin can create, update, or delete events
      allow create, update, delete: if isAdmin();
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
